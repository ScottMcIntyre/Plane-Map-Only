    <div id='map'></div>
    <script>
        mapboxgl.accessToken = 'YOUR_MAPBOX_ACCESS_TOKEN'; // Replace with your actual token
        const map = new mapboxgl.Map({
            container: 'map',
            style: 'mapbox://styles/mapbox/streets-v12', // Replace with your desired style
            center: [-74.5, 40], // Replace with your desired center
            zoom: 9 // Replace with your desired zoom
        });
    </script>
